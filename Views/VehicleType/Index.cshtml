@model List<VehicleType>

@{
    ViewBag.Title = "Vehicle Types";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<a asp-controller="VehicleType" asp-action="New">
    <button class="btn btn-primary">New</button>
</a>


@if (@Model.Count == 0)
{
    <p>There are no vehicle types to show. Please add a new one.</p>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Description</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var vehicleType in @Model)
        {
            <tr>
                <td>@Html.ActionLink(vehicleType.Description, "Edit", "VehicleType", new {id = vehicleType.Id})</td>
                <td>@vehicleType.Status.Name</td>
            </tr>
        }
        </tbody>
    </table>
}