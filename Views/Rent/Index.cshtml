@model List<RentCar.Models.Rent>

@{
    ViewBag.Title = "Rents";
    Layout = "_Layout";
}

<h2>Rents</h2>

<a asp-controller="Rent" asp-action="New">
    <button class="btn btn-primary">New</button>
</a>

<form method="get">
    <input type="text" id="criterio" name="criterio" />
    <input type="submit" id="cmdBuscar" value="Buscar por cliente" />
</form>

@if (@Model.Count == 0)
{
    <p>There are no rents to show. Please add a new one.</p>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>@Html.ActionLink("Code", "Index", new {sortOrder = ViewBag.NameSortParm})</th>
            <th>@Html.ActionLink("Status", "Index", new {sortOrder = ViewBag.StatusSortParam})</th>
            <th>@Html.ActionLink("Client", "Index", new {sortOrder = ViewBag.ClientSortParam})</th>
            <th>@Html.ActionLink("Employee", "Index", new {sortOrder = ViewBag.EmployeeSortParam})</th>
            <th>@Html.ActionLink("Vehicle", "Index", new {sortOrder = ViewBag.VehicleSortParam})</th>
            <th>@Html.ActionLink("Rented From", "Index", new {sortOrder = ViewBag.DateSortParm})</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var rent in @Model)
        {
            <tr>
                <td>@Html.ActionLink("Rent #" + rent.Id, "Details", "Rent", new {id = rent.Id})</td>
                <td>@rent.Status.Name</td>
                <td>@rent.Client.Name</td>
                <td>@rent.Employee.Name</td>
                <td>@rent.Vehicle.Description</td>
                <td>@rent.RentDate</td>
                <td>@Html.ActionLink("Edit", "Edit", "Rent", new {id = rent.Id}) | @Html.ActionLink("Return", "ConfirmReturn", "Rent", new {id = rent.Id})</td>
            </tr>
        }
        </tbody>
    </table>
}