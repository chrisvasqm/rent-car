@model List<RentCar.Views.Model.Employee>

@{
    ViewBag.Title = "Employees";
    Layout = "_Layout";
}

<h2>Employees</h2>


<a asp-controller="Employee" asp-action="New">
    <button class="btn btn-primary">New</button>
</a>


@if (@Model.Count == 0)
{
    <p>There are no vehicles to show. Please add a new one.</p>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Name</th>
            <th>ID Card</th>
            <th>Work shift</th>
            <th>Commission</th>
            <th>Admission date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in @Model)
        {
            <tr>
                <td>@Html.ActionLink(employee.Name, "Details", "Employee", new {id = employee.Id})</td>
                <td>@employee.IdentificationCard</td>
                <td>@employee.WorkShift.Name</td>
                <td>@employee.Commission.Value%</td>
                <td>@employee.AdmissionDate</td>
                <td>@Html.ActionLink("Edit", "Edit", "Employee", new {id = employee.Id}) | @Html.ActionLink("Delete", "Delete", "Employee", new {id = employee.Id})</td>
            </tr>
        }
        </tbody>
    </table>
}