@model List<RentCar.Views.Model.Client>

@{
    ViewBag.Title = "Client";
    Layout = "_Layout";
}

<h2>Clients</h2>

<a asp-controller="Client" asp-action="New">
    <button class="btn btn-primary">New</button>
</a>


@if (@Model.Count == 0)
{
    <p>There are no vehicles to show. Please add a new one.</p>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Name</th>
            <th>ID Card</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var client in @Model)
        {
            <tr>
                <td>@Html.ActionLink(client.Name, "Details", "Client", new {id = client.Id})</td>
                <td>@client.IdentificationCard</td>
                <td>@Html.ActionLink("Edit", "Edit", "Client", new {id = client.Id}) | @Html.ActionLink("Delete", "Delete", "Client", new {id = client.Id})</td>
            </tr>
        }
        </tbody>
    </table>
}