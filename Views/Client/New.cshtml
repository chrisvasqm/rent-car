@model RentCar.ViewModel.ClientViewModel

@{
    ViewBag.Title = "New";
    Layout = "_Layout";
}

@if (@Model.Id == 0)
{
    <h2>New</h2>
}
else
{
    <h2>Edit</h2>
}

@using (Html.BeginForm("Save", "Client"))
{
    @Html.ValidationSummary(true, "Please verify the following errors.")

    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.IdentificationCard)
            @Html.TextBoxFor(m => m.IdentificationCard, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.IdentificationCard)
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.CreditCard)
            @Html.TextBoxFor(m => m.CreditCard, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.CreditCard)
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.CreditLimit)
            @Html.TextBoxFor(m => m.CreditLimit, new {@class = "form-control", @type = "number", @step = "0.01"})
            @Html.ValidationMessageFor(m => m.CreditLimit)
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.StatusId)
            @Html.DropDownListFor(m => m.StatusId, new SelectList(Model.Statuses, "Id", "Name"), "Select a status", new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.StatusId)
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.PersonTypeId)
            @Html.DropDownListFor(m => m.PersonTypeId, new SelectList(Model.PersonTypes, "Id", "Name"), "Select a person type", new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.PersonTypeId)
        </div>
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}